<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    tools:context=".PharmacieFormActivity"
  >

    <ImageView
        android:id="@+id/pharmacie_logoA"
        android:layout_width="227dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/white" />

    <TextView
        android:id="@+id/pharmacie_titreA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pharmacie Form"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/pharmacie_logoA"
        tools:layout_editor_absoluteX="206dp" />

    <LinearLayout
        android:id="@+id/linearLayoutA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/pharmacie_titreA"
        tools:layout_editor_absoluteX="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pharmacie_nomA"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:hint="Pharmacie Nom"/>



        </LinearLayout>

        <EditText
            android:id="@+id/pharmacie_adresseA"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_height="55dp"
            android:hint="Pharmacie Address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pharmacie_latitudeA"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:hint="Latitude"/>

            <EditText
                android:id="@+id/pharmacie_longitudeA"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:layout_height="55dp"
                android:hint="Longitude"/>

        </LinearLayout>


        <Button
            android:id="@+id/pharmacie_btnA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textFontWeight="700"
            android:text="SAVE" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/go_to_sign_in"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="goToSigInAct"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>